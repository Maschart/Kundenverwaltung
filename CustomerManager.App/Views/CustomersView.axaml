<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CustomerManager.App.ViewModels"
             x:Class="CustomerManager.App.Views.CustomersView"
             x:DataType="vm:CustomersViewModel">

    <StackPanel Spacing="10">
        <TextBlock FontSize="20" Text="Kundenübersicht" />

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox Width="260" Watermark="Suche (Name/Email/Telefon)..." Text="{Binding Search}" />
            <Button Content="Neu" Command="{Binding NewCommand}" />
            <Button Content="Bearbeiten" Command="{Binding EditSelectedCommand}" />
            <Button Content="Löschen" Command="{Binding DeleteSelectedCommand}" />
            <Button Content="Aktualisieren" Command="{Binding LoadCommand}" />
        </StackPanel>

        <DataGrid ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False"
                  Height="420">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>